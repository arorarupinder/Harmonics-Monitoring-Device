from scipy import signal
import matplotlib.pyplot as plt
import numpy as np

#Time domain signal
# Sampling rate 1024 hz / second
t = np.linspace(0, 10, 1024, endpoint=True)

#Sine of the array
y = np.sin(t)

#Preallocate the output array (normalize)
z = np.zeros(len(t))
print(t)

#Construct square wave (square wave is sum of sine waves)
i = 0 
for i in np.arange(1,25,2):
    z += (4/(np.pi*i))*np.sin(2*np.pi*0.5*i*t)

#Plot
plt.plot(t,z, t,y)

#Perform FFT
b = np.fft.fft(t)
b_mag = np.abs(b)
print(b)
print(b_mag)

#Plot FFT
